FROM python:3.10-slim

WORKDIR /app

# Install dependencies
RUN pip install --no-cache-dir \
    fastapi==0.104.1 \
    uvicorn[standard]==0.24.0 \
    numpy==1.24.3 \
    pydantic==2.4.2 \
    aiohttp==3.9.0 \
    websockets==12.0

# Copy application files
COPY viewer/viewer_server.py /app/viewer_server.py

# Create data directory
RUN mkdir -p /data /app/static

EXPOSE 3000

CMD ["python", "viewer_server.py"]