FROM python:3.10-slim

WORKDIR /app

# Install dependencies
RUN pip install --no-cache-dir \
    fastapi==0.104.1 \
    uvicorn[standard]==0.24.0 \
    numpy==1.24.3 \
    pydantic==2.4.2

# Copy application files
COPY environment/environment_server.py /app/environment_server.py

# Create data directory
RUN mkdir -p /data

EXPOSE 8080

CMD ["python", "environment_server.py"]